<div z-load="@lib/components/media-browser" class="visible-on-ready"
     z-context="media-browser-inline" z-options="{ready: inlineMediaBrowserReady}"
     data-o-slide="5000" data-o-inline="true">
    <!-- List of images/videos (#media container) -->
    <div #media>
        <!-- Example image item -->
        <article>
            <h1 #title>Title</h1>
            <h2 #description>Description of the image.</h2>
            <!-- Image thumbnail url -->
            <img #preview src="https://picsum.photos/400/300/?image=201">
            <!-- Full-size image url -->
            <a #full z-mirror href="https://picsum.photos/1600/1200/?image=201">Full Size</a>
        </article>
        <!-- Example YT video item -->
        <article data-type="video" slide-interval="15000">
            <!-- YouTube video id -->
            <div #video>IdtM6OPdaio</div>
            <!-- Video thumbnail url -->
            <img #preview src="https://img.youtube.com/vi/IdtM6OPdaio/2.jpg">
        </article>
        {% for i in (1..10) -%}
        <article>
            <img #preview src="https://picsum.photos/seed/docs-2{{ i }}/400/300">
            <a #full z-mirror href="https://picsum.photos/seed/docs-2{{ i }}/1600/1200">Full Image</a>
        </article>
        {%- endfor %}
    </div> <!-- end of #media container -->
</div>
<script>
function inlineMediaBrowserReady(mb) {
  mb.on('fullscreen:open', () => {
    zuix.field('drawer').hide();
    zuix.field('header').hide();
  }).on('fullscreen:close', () => {
    zuix.field('drawer').show();
    zuix.field('header').show();
  });
}
</script>
