<div layout="rows top-spread">
    {%- for post in itemsList -%}

        {% if post.data.link %}
            {% assign postUrl = post.data.link | url %}
        {% else %}
            {% assign postUrl = post.url | url %}
        {% endif %}
        {% assign imageUrl = post.data.coverPreview | url %}

        {% zx 'card' 'image' post.data.title imageUrl postUrl %}
        {{ post.data.description }}
        {% endzx %}

    {%- endfor -%}
</div>
